<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th>Room</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each_with_index do |item, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= item.name %></td>
        <td><%= item.room.name %></td>
        <td><a href="<%= edit_item_path(item) %>"><button type="button" class="btn btn-secondary btn-sm">Edit</button></a></td>
        <td><%= link_to 'Delete', item_path(item),
                                  method: :delete,
                                  data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
   